/* 
 * Tailwind CSS imports
 * These directives are processed by Tailwind CSS during build
 */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* CRITICAL: Fix for mouse click issues */
@layer base {
    /* Ensure all interactive elements are clickable */
    button, 
    a, 
    [role="button"], 
    input[type="button"], 
    input[type="submit"], 
    input[type="reset"] {
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        -webkit-user-select: none !important;
        -moz-user-select: none !important;
        -ms-user-select: none !important;
        touch-action: manipulation !important;
        -webkit-touch-callout: none !important;
        -webkit-tap-highlight-color: transparent !important;
    }

    /* Fix for disabled elements */
    button:disabled,
    a[disabled],
    [role="button"][disabled] {
        pointer-events: none !important;
        cursor: not-allowed !important;
        opacity: 0.5 !important;
    }

    /* Ensure proper layering */
    * {
        z-index: auto;
    }

    /* Remove any overlay interference */
    body::before,
    body::after,
    *::before,
    *::after {
        pointer-events: none !important;
    }

    /* Fix for form elements */
    input, textarea, select {
        pointer-events: auto !important;
        cursor: text !important;
    }

    input[type="checkbox"],
    input[type="radio"] {
        cursor: pointer !important;
    }
}

/* Global fixes for click issues */
@layer utilities {
    .clickable {
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        touch-action: manipulation !important;
    }

    .no-click {
        pointer-events: none !important;
    }

    /* Fix for potential overlay issues */
    .fixed, .absolute, .relative, .sticky {
        pointer-events: auto;
    }

    /* Ensure modals don't block clicks when hidden */
    [x-show="false"], .hidden {
        pointer-events: none !important;
    }

    /* Fix for Alpine.js transitions */
    [x-transition] {
        pointer-events: auto !important;
    }
}

/* Profile Page Custom Styles */
@layer components {
    .profile-card {
        @apply bg-white rounded-2xl shadow-lg border border-gray-100 transition-all duration-300 hover:shadow-xl;
    }
    
    .profile-input {
        @apply w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white;
    }
    
    .profile-button {
        @apply font-semibold py-3 px-8 rounded-xl transition-all duration-200 transform hover:scale-105 focus:ring-4 focus:outline-none shadow-lg flex items-center;
    }
    
    .profile-button-primary {
        @apply profile-button bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white focus:ring-blue-200;
    }
    
    .profile-button-secondary {
        @apply profile-button bg-gradient-to-r from-green-600 to-teal-600 hover:from-green-700 hover:to-teal-700 text-white focus:ring-green-200;
    }
    
    .profile-section-header {
        @apply flex items-center mb-6;
    }
    
    .profile-icon {
        @apply w-10 h-10 rounded-lg flex items-center justify-center mr-4;
    }

    /* Enhanced Card Components */
    .modern-card {
        @apply bg-white rounded-2xl shadow-sm border border-gray-100 transition-all duration-300 hover:shadow-lg hover:border-gray-200;
    }

    .glass-card {
        @apply bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 transition-all duration-300;
    }

    .stats-card {
        @apply modern-card p-6 text-center relative overflow-hidden;
    }

    .stats-card::before {
        content: '';
        @apply absolute inset-0 bg-gradient-to-br opacity-5 transition-opacity duration-300;
    }

    .stats-card:hover::before {
        @apply opacity-10;
    }

    /* Button Variants */
        .btn-primary {
        @apply font-semibold py-3 px-6 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white transition-all duration-200 transform hover:scale-105 focus:ring-4 focus:ring-blue-200 focus:outline-none shadow-lg inline-flex items-center justify-center;
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        touch-action: manipulation !important;
    }

    .btn-secondary {
        @apply font-semibold py-3 px-6 rounded-xl bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white transition-all duration-200 transform hover:scale-105 focus:ring-4 focus:ring-gray-200 focus:outline-none shadow-lg inline-flex items-center justify-center;
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        touch-action: manipulation !important;
    }

    .btn-success {
        @apply font-semibold py-3 px-6 rounded-xl bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white transition-all duration-200 transform hover:scale-105 focus:ring-4 focus:ring-green-200 focus:outline-none shadow-lg inline-flex items-center justify-center;
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        touch-action: manipulation !important;
    }

    .btn-danger {
        @apply font-semibold py-3 px-6 rounded-xl bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white transition-all duration-200 transform hover:scale-105 focus:ring-4 focus:ring-red-200 focus:outline-none shadow-lg inline-flex items-center justify-center;
        pointer-events: auto !important;
        cursor: pointer !important;
        user-select: none !important;
        touch-action: manipulation !important;
    }

    .btn-warning {
        @apply inline-flex items-center px-6 py-3 bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 focus:ring-4 focus:ring-yellow-200 focus:outline-none;
    }

    /* Form Enhancements */
    .form-input {
        @apply w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white placeholder-gray-400;
    }

    .form-select {
        @apply form-input appearance-none bg-no-repeat bg-right pr-10 cursor-pointer;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-size: 1.25em 1.25em;
    }

    /* Badge Components */
    .badge {
        @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium transition-all duration-200;
    }

    .badge-success {
        @apply badge bg-green-100 text-green-800 hover:bg-green-200;
    }

    .badge-warning {
        @apply badge bg-yellow-100 text-yellow-800 hover:bg-yellow-200;
    }

    .badge-danger {
        @apply badge bg-red-100 text-red-800 hover:bg-red-200;
    }

    .badge-info {
        @apply badge bg-blue-100 text-blue-800 hover:bg-blue-200;
    }

    .badge-secondary {
        @apply badge bg-gray-100 text-gray-800 hover:bg-gray-200;
    }

    /* Table Enhancements */
    .table-modern {
        @apply w-full border-collapse;
    }

    .table-modern th {
        @apply px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider bg-gray-50 border-b border-gray-200;
    }

    .table-modern td {
        @apply px-6 py-4 whitespace-nowrap border-b border-gray-100 transition-colors duration-200;
    }

    .table-modern tbody tr {
        @apply hover:bg-gray-50 transition-colors duration-200;
    }

    /* Loading States */
    .skeleton {
        @apply animate-pulse bg-gray-200 rounded;
    }

    .loading-dots {
        @apply inline-flex space-x-1;
    }

    .loading-dots div {
        @apply w-2 h-2 bg-current rounded-full animate-bounce;
    }

    .loading-dots div:nth-child(2) {
        animation-delay: 0.1s;
    }

    .loading-dots div:nth-child(3) {
        animation-delay: 0.2s;
    }
}

/* Responsive animations */
@media (max-width: 640px) {
    .profile-card {
        @apply mx-2;
    }
    
    .profile-button {
        @apply w-full justify-center;
    }

    .stats-card {
        @apply p-4;
    }
}

/* Smooth transitions for modals */
.modal-transition {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-backdrop {
    @apply fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity duration-300;
}

.modal-content {
    @apply relative bg-white rounded-2xl shadow-2xl transform transition-all duration-300 max-w-lg mx-auto mt-20;
}

/* Custom scrollbar for better UX */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    @apply bg-gray-100 rounded-full;
}

::-webkit-scrollbar-thumb {
    @apply bg-gray-300 rounded-full hover:bg-gray-400 transition-colors duration-200;
}

/* Loading states */
.loading-shimmer {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInRight {
    from { opacity: 0; transform: translateX(100px); }
    to { opacity: 1; transform: translateX(0); }
}

@keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-100px); }
    to { opacity: 1; transform: translateX(0); }
}

@keyframes scaleIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
}

.animate-fadeIn {
    animation: fadeIn 0.6s ease-out;
}

.animate-slideInRight {
    animation: slideInRight 0.6s ease-out;
}

.animate-slideInLeft {
    animation: slideInLeft 0.6s ease-out;
}

.animate-scaleIn {
    animation: scaleIn 0.4s ease-out;
}

/* Enhanced focus states for accessibility */
.profile-input:focus,
.form-input:focus,
.form-select:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Gradient backgrounds */
.gradient-bg {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.gradient-bg-light {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.gradient-bg-success {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.gradient-bg-warning {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.gradient-bg-danger {
    background: linear-gradient(135deg, #fc466b 0%, #3f5efb 100%);
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
    .modern-card {
        @apply bg-gray-800 border-gray-700;
    }
    
    .glass-card {
        @apply bg-gray-800/80 border-gray-700/20;
    }
}

/* ===== ENHANCED MOBILE RESPONSIVENESS ===== */

/* Mobile-first responsive utilities */
@layer utilities {
    /* Responsive Grid System */
    .responsive-grid {
        @apply grid gap-4;
    }
    
    .responsive-grid-1 {
        @apply grid-cols-1;
    }
    
    .responsive-grid-2 {
        @apply grid-cols-2 md:grid-cols-3 lg:grid-cols-4;
    }
    
    .responsive-grid-stats {
        @apply grid-cols-2 md:grid-cols-3 lg:grid-cols-5;
    }
    
    .responsive-grid-cards {
        @apply grid-cols-1 md:grid-cols-2 lg:grid-cols-3;
    }

    /* Responsive Text Sizes */
    .text-responsive-xs {
        @apply text-xs md:text-sm;
    }
    
    .text-responsive-sm {
        @apply text-sm md:text-base;
    }
    
    .text-responsive-base {
        @apply text-base md:text-lg;
    }
    
    .text-responsive-lg {
        @apply text-lg md:text-xl;
    }
    
    .text-responsive-xl {
        @apply text-xl md:text-2xl lg:text-3xl;
    }

    /* Responsive Spacing */
    .responsive-p {
        @apply p-4 md:p-6 lg:p-8;
    }
    
    .responsive-m {
        @apply m-4 md:m-6 lg:m-8;
    }
    
    .responsive-gap {
        @apply gap-4 md:gap-6 lg:gap-8;
    }

    /* Mobile-specific utilities */
    .mobile-only {
        @apply block md:hidden;
    }
    
    .desktop-only {
        @apply hidden md:block;
    }
    
    .tablet-up {
        @apply hidden md:block;
    }
    
    .mobile-stack {
        @apply flex-col md:flex-row;
    }
    
    .mobile-center {
        @apply text-center md:text-left;
    }
    
    .mobile-full {
        @apply w-full md:w-auto;
    }
}

/* Enhanced component responsiveness */
@layer components {
    /* Enhanced form responsiveness */
    .form-mobile {
        @apply space-y-4 md:space-y-6;
    }
    
    .form-row-mobile {
        @apply flex flex-col md:flex-row md:space-x-4 space-y-4 md:space-y-0;
    }
    
    .form-group-mobile {
        @apply flex-1;
    }

    /* Navigation enhancements */
    .nav-mobile {
        @apply flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4;
    }
    
    .nav-link-mobile {
        @apply nav-link px-4 py-3 md:px-3 md:py-2 text-center md:text-left;
    }

    /* Card layouts for mobile */
    .card-grid-mobile {
        @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6;
    }
    
    .card-mobile {
        @apply modern-card p-4 md:p-6;
    }
    
    .card-header-mobile {
        @apply flex flex-col md:flex-row md:justify-between md:items-center space-y-2 md:space-y-0 mb-4;
    }
    
    .card-title-mobile {
        @apply text-lg md:text-xl font-bold text-gray-900;
    }
    
    .card-actions-mobile {
        @apply flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2;
    }
}

/* Mobile-specific media queries */
@media (max-width: 640px) {
    /* Enhanced mobile touches */
    .touch-target {
        min-height: 44px !important;
        min-width: 44px !important;
    }
    
    /* Mobile button adjustments */
    .btn-primary,
    .btn-secondary,
    .btn-success,
    .btn-danger,
    .btn-warning {
        @apply py-3 px-4 text-sm;
    }
    
    /* Mobile table responsiveness */
    .table-modern {
        font-size: 0.875rem;
    }
    
    .table-modern th,
    .table-modern td {
        @apply px-3 py-3;
    }
    
    /* Mobile card adjustments */
    .stats-card {
        @apply p-4;
    }
    
    .modern-card {
        @apply rounded-lg;
    }
    
    /* Mobile spacing adjustments */
    .container {
        @apply px-4;
    }
    
    /* Mobile form improvements */
    .form-input,
    .profile-input {
        @apply py-3 text-base; /* Prevent zoom on iOS */
    }
    
    /* Mobile modal adjustments */
    .modal-content {
        @apply mx-4 mt-8 rounded-lg;
    }
    
    /* Mobile navigation */
    .nav-mobile .nav-link-mobile {
        @apply w-full;
    }
}

/* Tablet-specific adjustments */
@media (min-width: 641px) and (max-width: 1024px) {
    .responsive-grid-stats {
        @apply grid-cols-3;
    }
    
    .card-grid-mobile {
        @apply grid-cols-2;
    }
    
    .stats-card {
        @apply p-5;
    }
}

/* Large screen optimizations */
@media (min-width: 1025px) {
    .responsive-grid-stats {
        @apply grid-cols-5;
    }
    
    .card-grid-mobile {
        @apply grid-cols-3;
    }
    
    .container {
        @apply max-w-7xl mx-auto;
    }
}

/* Print styles */
@media print {
    .mobile-only,
    .btn-primary,
    .btn-secondary,
    .btn-success,
    .btn-danger,
    .btn-warning {
        display: none !important;
    }
    
    .modern-card,
    .stats-card {
        @apply shadow-none border border-gray-300;
    }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    .profile-button,
    .btn-primary,
    .btn-secondary,
    .btn-success,
    .btn-danger,
    .btn-warning {
        transform: none !important;
        transition: background-color 0.2s ease !important;
    }
    
    .animate-fadeIn,
    .animate-slideInRight,
    .animate-slideInLeft,
    .animate-scaleIn {
        animation: none !important;
    }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    .modern-card,
    .stats-card {
        @apply border-2 border-gray-900;
    }
    
    .btn-primary {
        @apply bg-blue-900 border-2 border-blue-900;
    }
    
    .btn-success {
        @apply bg-green-900 border-2 border-green-900;
    }
}

/* Focus management for better keyboard navigation */
.focus-visible {
    @apply ring-2 ring-blue-500 ring-offset-2 outline-none;
}

/* Enhanced focus for mobile touch */
@media (hover: none) and (pointer: coarse) {
    .btn-primary:active,
    .btn-secondary:active,
    .btn-success:active,
    .btn-danger:active,
    .btn-warning:active {
        transform: scale(0.98) !important;
    }
}
